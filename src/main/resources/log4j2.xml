<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Properties>
    <Property name="logfile">log/NolaBot.log</Property>
  </Properties>

  <Appenders>
    <File name="NolaBotLog" fileName="${logfile}">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="NolaBotLog"/>
    </Root>
  </Loggers>

</Configuration>